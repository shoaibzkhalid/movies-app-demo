{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/screens/*": ["./src/screens/*"],
      "@/features/*": ["./src/features/*"],
      "@/navigators/*": ["./src/navigators/*"],
      "@/components/*": ["./src/components/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/api/*": ["./src/api/*"],
      "@/styles/*": ["./src/styles/*"],

      "@/types/*": ["./src/types/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/stores/*": ["src/stores/*"],
      "*": ["src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
